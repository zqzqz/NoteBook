<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_analysis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_analysis">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_100"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B68EE"
            android:padding="@dimen/activity_margin_16"
            android:gravity="center_horizontal"
            android:text="情感分析结果"
            android:textColor="@color/grey_050"
            android:textSize="@dimen/text_size_20" />


        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/analysis_sensi"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:background="@android:color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B68EE"
            android:padding="@dimen/activity_margin_16"
            android:gravity="center_horizontal"
            android:text="内容分析结果"
            android:textColor="@color/grey_050"
            android:textSize="@dimen/text_size_20" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_height="360dip" />

        <Button
            android:id="@+id/analysis_recom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="推荐" />


    </LinearLayout>




</LinearLayout>
